<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_news_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/card_radius">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:padding="@dimen/spacing_standard">

        <TextView
            android:id="@+id/tv_category"
            style="@style/NewsItemCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            tools:text="DARWIN AWARD" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/NewsItemTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_category"
            android:layout_toEndOf="@id/iv_preview"
            tools:text="Tourist filmed sitting on 5m-long crocodile" />

        <TextView
            android:id="@+id/tv_preview"
            style="@style/NewsItemPreviewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_title"
            android:layout_toEndOf="@id/iv_preview"
            tools:text="It was dangerous, I know. It is a scary feeling sitting on something that could kill you in a fraction of a second, he says." />

        <TextView
            android:id="@+id/tv_date"
            style="@style/NewsItemDateStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_preview"
            android:layout_toEndOf="@id/iv_preview"
            tools:text="4 hr.ago, 10:34 AM" />

        <ImageView
            android:id="@+id/iv_preview"
            style="@style/ImagePreviewStyle"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/tv_title"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/cities" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>