<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="icon_style">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="icon_contact_style" parent="icon_style">
        <item name="android:layout_margin">@dimen/small_margin_val</item>
    </style>

    <style name="standard_view_style">
        <item name="android:layout_marginBottom">@dimen/small_margin_val</item>
        <item name="android:layout_marginEnd">@dimen/small_margin_val</item>
        <item name="android:layout_marginStart">@dimen/big_margin_val</item>
        <item name="android:layout_marginTop">@dimen/small_margin_val</item>
    </style>

    <style name="standard_text_style" parent="standard_view_style">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="standard_button_style" parent="standard_text_style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_title_style">
        <item name="android:layout_marginStart">@dimen/small_margin_val</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <declare-styleable name="standard_view_style_table" >
        <attr name="android:layout_marginBottom" />
        <attr name="android:layout_marginEnd" />
        <attr name="android:layout_marginStart" />
        <attr name="android:layout_marginTop" />
    </declare-styleable>

</resources>
